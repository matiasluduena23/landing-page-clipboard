---
const { title, text } = Astro.props;
---

<div class="header-content">
    <h1>{title}</h1>
    <p>{text}</p>
    <div class="wrap-buttons">
        <button>Download for iOS</button>
        <button>Download for Mac</button>
    </div>
</div>

<style>
    .header-content {
        text-align: center;
        max-width: 680px;
        margin-inline: auto;
    }

    h1 {
        color: var(--dark-grayish-blue);
        font-size: clamp(2rem, 5vw, 2.7rem);
    }

    p {
        margin-block: 1.3rem;
        color: var(--grayish-blue);
        margin-inline: auto;
        font-size: clamp(16px, 5vw, 20px);
        max-width: 675px;
    }

    .wrap-buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    button {
        border: none;
        padding: 1rem 4rem;
        border-radius: 30px;
        color: white;
        font-weight: 700;
        font-size: 18px;
    }

    button:first-child {
        background-color: var(--strong-cyan);
        box-shadow: 2px 8px 15px rgba(38, 186, 164, 0.2);
    }

    button:last-child {
        background-color: var(--light-blue);
        box-shadow: 2px 8px 15px rgba(97, 115, 255, 0.2);
    }

    @media (min-width: 768px) {
        .wrap-buttons {
            flex-direction: row;
            justify-content: center;
        }

        button {
            padding-inline: 2rem;
        }
    }
</style>
